<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :role %><br>
    <%= f.text_field :role %>
  </div>
  <div class="field">
    <%= f.label :dx_date %><br>
    <%= f.date_select :dx_date %>
  </div>
  <div class="field">
    <%= f.label :year_of_birth %><br>
    <%= select_year Date.today, start_year: Date.today.year - 20 , end_year: Date.today.year, field_name: :year_of_birth, prefix: :user %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
